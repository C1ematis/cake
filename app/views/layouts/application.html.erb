<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <link href="https://fonts.googleapis.com/earlyaccess/nicomoji.css" rel="stylesheet" />
  </head>

  <body>
    <!--じゅんぺい　色変更↓-->
    <div class="back-ground">
      <div class="container-fuluid ">
        <div class="row">
          <div class="col-10 offset-1 color">
            <div class="d-flex justify-content-between">
            <div>
              <%= image_tag 'naganologo.png',class: "mainlogo" %>
               <% if member_signed_in? %>
                 <span class="name">ようこそ、<%= current_member.last_name %> <%= current_member.first_name %>さん</span>
               <% end %>
            </div>
              <div>
              <nav class="navbar  navbar-expand-lg navbar-light text-align-center gnav mt-3">
               <ul class="navbar-nav justfy-content-center">
                <% if member_signed_in? %>
                  <li class="nav-item"><%= link_to 'マイページ', members_path(current_member), class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to '商品一覧', products_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to "カート:#{current_member.cart_products.count}", cart_products_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><p><%= link_to "ログアウト", destroy_member_session_path, method: :delete, class: "btn btn-danger" %></p></li>
                <% elsif admin_signed_in? %>
                  <li class="nav-item"><%= link_to '商品一覧', admin_products_path , class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to '会員一覧', admin_members_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to '注文履歴一覧', admin_orders_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to 'ジャンル一覧', admin_genres_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-danger" %></li>
                <% else %>
                  <li class="nav-item"><%= link_to 'About', about_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to '商品一覧', products_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to '新規登録', new_member_registration_path, class: "btn btn-danger" %></li>
                  <li class="nav-item"><%= link_to 'ログイン', member_session_path, class: "btn btn-danger" %></li>
                <% end %>
               </ul>
             </nav>
                <div class="search_container d-flex justify-content-end pr-4">
                  <% if request.fullpath.include?("admin/member") %>
                    <%= form_with url: admin_members_path, method: :get, local: true do |f| %>
                      <%= f.text_field :word, :value => @word , placeholder: "  を入力して下さい(管理者)"  %>
                      <%= f.submit "" %>
                    <% end %>
                  <% elsif request.fullpath.include?("admin/products") %>
                    <%= form_with url: admin_products_path, method: :get, local: true do |f| %>
                      <%= f.text_field :word, :value => @word , placeholder: "  を入力して下さい(管理者)" %>
                      <%= f.submit "" %>
                    <% end %>
                  <% else %>
                    <%= form_with url: products_path, method: :get, local: true do |f| %>
                      <%= f.text_field :word, placeholder: "  を入力して下さい"%>
                      <%= f.submit "" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
