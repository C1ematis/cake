<div class="container px-5 px-sm-0 py-5">
  <p class="page-title">検索結果</p>
  <div class="row">
    <div class="col-md-3">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
           <%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %>
         </td>
        </tr>
      <% end %>
      </tbody>
     </table>
    </div>

    <div class="col-md-9">
      <div class="search">
        <% if @datas.empty? %>
        <h2 class="danger">該当する商品はありません。</h2>
        <% end %>
        <% @datas.each do |data| %>
        <div class="search-inner">
          <% if admin_signed_in? %>
          <%= link_to admin_product_path(data.id) do %>
          <%= attachment_image_tag data, :image, size: "100x100",format:'jpeg',fallback:'no_image.jpg' %></br>
          <p><%= data.name %></p><br>
          <p>￥<%= data.price %></p>
          <% end %>
          <% else %>
          <%= link_to product_path(data.id) do %>
          <%= attachment_image_tag data, :image, size: "100x100",format:'jpeg',fallback:'no_image.jpg' %></br>
          <p><%= data.name %></p><br>
          <p>￥<%= data.price %></p>
          <% end %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
