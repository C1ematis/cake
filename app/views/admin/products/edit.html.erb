<div class="container px-5 px-sm-0 py-5">
  <p class="page_title">商品編集</p>
  <% if @product.errors.any? %>
  <h3><%= @product.errors.count %>件のエラーが発生しました。</h3>
  <% @product.errors.full_messages.each do |message| %>
  <p>・<%=message %></p>
  <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-10 offset-2">
      <%= form_with model: @product, url:admin_product_path(@product), method: :patch, local:true do |f| %>
    <table class"table">
      <tbody>
        <tr>
          <td>
            <div class="form-group">
              <%= f.label :商品画像 %>
          </td>
          <td>
            <%= f.attachment_field :image, size:"200x200" %>
          </td>
            </div>
        </tr>
        <tr>
          <td>
          <div class="product_name_form">
            <%= f.label :商品名 %>
          </td>
          <td>
            <%= f.text_field :name, size:"50" %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="product_introduction_form">
            <%= f.label :商品説明 %>
          </td>
          <td>
            <%= f.text_area :introduction, size:"53" %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div class="product_genre_form">
            <%= f.label :ジャンル %>
          </td>
          <td>
            <%= f.collection_select :genre_id, Genre.all, :id, :name ,prompt: '--選択してください--' %>
          </td>
            </div>
        </tr>
        <tr>
          <td>
            <div class="product_price_form">
            <%= f.label :税抜価格 %>
          </td>
          <td>
            <%= f.number_field :price %>
            </div>
          </td>
        </tr>
        <tr>
          <td>
          <%= f.label :販売ステータス %>
          </td>
          <td>
            <div class="sale_status_form">
            <%= f.radio_button :is_active, true %>
            <%= f.label :done, '販売中', value: true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :done, '販売停止中', value: false %>
          </td>
          </div>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "新商品を保存", class: "btn btn-primary"  %>
            </td>
          </tr>
      </tbody>
    </table>
    </div>
    <% end %>
  </div>
</div>
</div>