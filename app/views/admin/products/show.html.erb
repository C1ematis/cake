admin 商品詳細画面
<table class='table table-hover table-inverse'>
  </thead>
  <tbody>
      <tr>
        <td>
         <%= attachment_image_tag @product, :image, size:"150x150" %>
        </td>
      </tr>
      <tr>
        <td>
         商品名: <%= @product.name %>
        </td>
      </tr>
      <tr>
        <td>
          商品説明:<%= @product.introduction %>
        </td>
      </tr>
      <tr>
        <td>
          税込価格(税抜価格):<%= @product.price*$tax_rate %>(<%= @product.price %>)円

        </td>
      </tr>
      <tr>
        <td>
           ジャンル:<%= @product.genre.name %>
        </td>
      </tr>
      <tr>
         <td>
            <% if @product.is_active = true %>
             <p>販売中</p>
            <% else %>
             <p>販売停止中</p>
            <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to "編集する", edit_admin_product_path(@product) %>
        </td>
      </tr>
      </tr>
  </tbody>
</table>
