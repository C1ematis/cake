<span>admin商品一覧画面</span>
<span>
  <%= link_to new_admin_product_path do %>
    <i class= "fas fa-plus-circle"></i>
  <% end %>
</span>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td></td>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to admin_product_path(product) do %>
          <%= product.name %>
          <% end %>
        </td>
        <td>
            <%= product.price %>
        </td>
        <td>
            <%= product.genre.name %>
        </td>
        <td>
            <% if product.is_active == true %>
            <P>販売中</P>
            <% else %>
            <p>販売停止中</p>
            <% end %>
        </td>
      </tr>
    <% end %>
    <%= paginate @products_pages %>
  </tbody>
</table>
