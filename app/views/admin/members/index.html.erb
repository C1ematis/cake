<h1>会員一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        会員ID
      </th>
      <th>
        氏名
      </th>
      <th>
        メールアドレス
      </th>
      <th>
        ステータス
      </th>
    </tr>
  </thead>
  <tbody>
  
  <% @members.each do |member| %>
    <tr>
      <td>
        <%= member.id %>
      </td>
      <td>
        <%= link_to admin_member_path(member.id) do %>
          <%= member.last_name %>
          <%= member.first_name %>
        <% end %>
      </td>
      <td>
        <%= member.email %>
      </td>
      <td>
        <% if member.is_deleted %>
          退会
        <% else %>
          有効
        <% end %>
      </td>
    </tr>
  
  <% end %>
  <%= paginate @members %>
  </tbody>
</table>
<%= paginate @members %>
