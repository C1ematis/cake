<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h1><%= @member.last_name_kana %> <%= @member.first_name_kana %>さんの登録情報編集</h1>
        <%= form_with(model: @member,url:admin_member_path, local:true ,method: :patch) do |f| %>
        <%= render "admin/shared/error_messages", resource: @member %>
        
        <table class="table">
        
          <tr>
            <th>
              <p>会員ID <%=@member.id %></p>
            </th>
          </tr>
          <tr>
            <th class= "input-group">
              <%= f.label :氏名 %>
              <%= f.text_field :last_name,required: true, class:"form-controls" %>
              <%= f.text_field :first_name,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :フリガナ(全角カタカナ) %>
              <%= f.text_field :last_name_kana,required: true, pattern: "[ァ-ヶー－]*" %>
              <%= f.text_field :first_name_kana,required: true, pattern: "[ァ-ヶー－]*" %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :郵便番号 %>
              <%= f.text_field :postal_code,required: true, maxlength: 7,minlength: 7 %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :住所 %>
              <%= f.text_field :address,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :電話番号 %>
              <%= f.number_field :telephone_number,required: true ,class:"no-spin" %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :メールアドレス %>
              <%= f.email_field :email,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :会員ステータス %>
              <%= f.radio_button "is_deleted", false %>有効<%= f.radio_button "is_deleted", true %>退会
            </th>
          </tr>
        
        </table>
          <%= f.submit "変更内容を保存", class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>

