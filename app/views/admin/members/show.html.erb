<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h1><%= @member.last_name_kana %> <%= @member.first_name_kana %>さんの会員詳細</h1>
        <table class="table">
          <tr>
            <th>氏名</th> <th><%= @member.last_name %> <%= @member.first_name %></th>
          </tr>
          <tr>
            <th>カナ</th> <th><%= @member.last_name_kana %> <%= @member.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th> <th><%= @member.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th> <th><%= @member.address %></th>
          </tr>
          <tr>
            <th>電話番号</th> <th><%= @member.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th> <th><%= @member.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @member.is_deleted %>
                  退会
                <% else %>
                  有効
                <% end %>
            </th>
          </tr>
        </table>
        <%= link_to "編集する",edit_admin_member_path, class: "btn btn-success" %>
        <%= link_to  "注文履歴一覧を見る", admin_orders_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
