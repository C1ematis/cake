<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>注文履歴一覧</h2>
      <table class="table">
        <thead style="background-color: #e3f2fd;">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td>
                <%= order.member.last_name %> <%= order.member.first_name %>
              </td>
              <td><%= order.order_products.count %></td>
              <td><%= order.received_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>