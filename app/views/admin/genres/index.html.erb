admin ジャンル一覧、追加画面
<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit "新規登録" %>
<% end %>




<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>