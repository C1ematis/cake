<p id:"notice"><%= notice %></p>
<div class="containe">
  <div class="roe">
    <div class="col-10 offset-1">
      <h2 class="mt-3">ジャンル一覧</h2>
      <div>
          <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, required: true %><%= f.submit "新規登録" %>
          <% end %>
          <%= render "members/shared/error_messages", resource: @genre %>
        </div>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>ジャンル</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>





