<p id:"notice"><%= notice %></p>
<div class="container">
  <div id="error_explanation">
    <% if @genre.errors.any? %>
      <p><%= @genre.errors.count %>件のエラーが発生しました。</p>
      <% @genre.errors.full_messages.each do |message| %>
      <p>・<%= message %></p>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
      <span><%= f.label :ジャンル名 %></span>
      <span><%= f.text_field :name %><%= f.submit "新規登録" %></span>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





