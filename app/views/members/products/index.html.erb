<div class="container">
  <p class="page-title">商品一覧</p>
  <div class="row">
    <div class="col-md-10 flex-row">
      <div class="yoko">
        <% if @products != "no_search" %>
          <% @products.each do |product| %>
            <div class="index-inner">
              <%= link_to product_path(product.id) do %>
                <div class="enn">
                  <% if product.is_active? %>
                    <%= attachment_image_tag product, :image, size:"200x200",format: 'jpeg', fallback:"no_image.jpg", class: "sold" %>
                  <% else %>
                    <%= attachment_image_tag product, :image, size:"200x200",format: 'jpeg', fallback:"no_image.jpg", class: "sold" %>
                    <div class="soldout1"><img src="/assets/sold_out.png" width="100px" height="50px"></div>
                  <% end %>
                </div>
                <p><%= product.name %></p>
                <p>￥ <%= product.price %></p>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <h4>"<%= @word %><%= @gunre_name %>"で該当する商品はありません</h4>
        <% end %>
      </div>
    </div>
    <div class="col-md-2">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre.name, products_path(genre: genre.name) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
