<div class="container">
  <p class="page-title">items</p>
  <div class="row">
    <div class="col-md-10 flex-row">
        <% if @products != "no_search" %>
        <% if @product_name.present? || @gunre_name.present? %>
          <h4>"<%= @product_name %><%= @gunre_name %>"で検索した結果<%= @products.count %>件あります</h4>
        <% end %>
        <div class="yoko">
          <% @products.each do |product| %>
            <div class="index-inner">
            <%= link_to product_path(product.id) do %>
              <%= attachment_image_tag product, :image, size:"200x200",format: 'jpeg', fallback:"no_image.jpg" %>
              <p><%= product.name %></p>
              <p>￥ <%= product.price %></p>
            <% end %>
            </div>
          <% end %>
       <% else %>
       <h4>"<%= @product_name %><%= @gunre_name %>"で該当する商品はありません</h4>
       <% end %>

       </div>
    </div>
    <div class="col-md-2">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to "#{genre.name} (#{genre.products.count})", products_path(genre: genre.name) %>
         </td>
        </tr>
      <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>
