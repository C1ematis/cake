<h1>商品一覧</h1>
<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <div class="col-md-3">
    <table class="table genre-table">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %>
         </td>
        </tr>
      <% end %>
      </tbody>
     </table>
    </div>

    <div class="col-md-9">
      <div class="yoko">
       <% @products.each do |product| %>
       <div class="index-inner">
       <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag product, :image, size:"200x200",format: 'jpeg', fallback:"no_image.jpg" %>
        <p><%= product.name %></p>
        <p>￥ <%= product.price %></p>
        </div>
       <% end %>
       <% end %>
       </div>
    </div>
  </div>
</div>
