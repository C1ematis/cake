<div class="container">
  <div class="row justify-content-md-center">
    <% @products.each do |product| %>
    <!--<div class="col-3">-->
    <!--  <p>%= render 'members/genres/genre_search_form', genres: @genres %> </p>-->
    <!--</div>-->
    <div class="col-sm">
      <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag product, :image, size:"100x100",format: 'jpeg', fallback:"no_image.jpg" %>
        <p><%= product.name %></p>
      <% end %>
      <p>￥ <%= product.price %></p>
    </div>
    <% end %>
  </div>
</div>
