<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <p class="page-title">登録情報編集</p>
      <%= form_with model:@member,url:"/members/myedit", local:true do |f| %>
      <%= render "members/shared/error_messages", resource: @member %>
      <table class="table">
        <tr>
          <thead>
            <th>
              <%= f.label :氏名 %>
              <%= f.text_field :last_name ,required: true %>
              <%= f.text_field :first_name ,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :フリガナ（全角カタカナ） %>
              <%= f.text_field :last_name_kana , pattern: "[ァ-ヶー－]*" ,required: true %>
              <%= f.text_field :first_name_kana , pattern: "[ァ-ヶー－]*" ,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :郵便番号 %>
              <%= f.text_field :postal_code , maxlength: 7, minlength: 7, required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :電話番号 %>
              <%= f.number_field :telephone_number , class: "no-spin" ,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :住所 %>
              <%= f.text_field :address ,required: true %>
            </th>
          </tr>
          <tr>
            <th>
              <%= f.label :メールアドレス %>
              <%= f.text_field :email ,required: true %>
            </th>
          </tr>
        </thead>
      </table>
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
        <%= link_to "退会する",members_leave_path, class:"btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>

