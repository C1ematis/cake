<div class="login-body">
  <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>

                <span id="reauth-email" class="reauth-email"></span>
                    <h3>新規登録画面</h3>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "members/shared/error_messages", resource: resource %>
                      <div class="input-group">
                        <%= f.label :名前（姓） %>
                        <%= f.text_field :last_name, autofocus: true, placeholder: "令和", autocomplete: "last_name",required: true %>
                        <%= f.label :名前（名） %>
                        <%= f.text_field :first_name, autofocus: true, placeholder: "道子", autocomplete: "first_name",required: true %>
                        <br /><%= f.label :フリガナ（全角カタカナ） %><br />
                        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", autocomplete: "last_name", required: true, pattern: "[ァ-ヶー－]*"%>
                        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", autocomplete: "first_name", required: true, pattern: "[ァ-ヶー－]*"%>

                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", required: true %>

                        <%= f.label :郵便番号（ハイフンなし） %><br />
                        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", maxlength: 7,minlength: 7 ,autocomplete: "postal_code",required: true %><br />

                        <%= f.label :住所 %><br />
                        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園0-0", autocomplete: "address",required: true %>
                      <div class="field">
                        <%= f.label :電話番号（ハイフンなし） %><br />
                        <%= f.number_field :telephone_number, autofocus: true, placeholder: "00000000000", autocomplete: "telephone_number" ,required: true ,class: "no-spin"  %>
                      </div>

                      <div class="field">
                        <%= f.label :パスワード %>
                        <% if @minimum_password_length %>
                        (<%= @minimum_password_length %>文字以上)
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password" %>
                      </div>

                      <div class="field">
                        <%= f.label :パスワード（確認用） %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                      </div>

                      <div class="actions">
                        <%= f.submit "新規登録", class:"btn btn-info btn-block login"   %>
                      </div>
                    <% end %>
                    <h3>既に登録済みの方</h3>
                    <%= render "members/shared/links" %>
                <div id="remember" class="checkbox">
                </div>
        </div>
    </div>
</div>

