<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="mt-3">注文履歴詳細</h2>
      <div class= "d-flex justify-content-between">
        <div>
          <strong>注文情報</strong>
          <table class= "table table-bordered">
            <thead>
              <tr>
                <th class="table-secondary">注文日</th>
                <td><%= l @order.created_at,format: :short %></td>
              </tr>
              <tr>
                <th class="table-secondary align-middle">配送先</th>
                <td>〒<%= add_ress(@order.postal_code) %><br><%= @order.address %><br><%= @order.name %></td>
              </tr>
              <tr>
                <th class="table-secondary">支払方法</th>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th class="table-secondary">ステータス</th>
                <td><%= @order.received_status %></td>
              </tr>
            </thead>
          </table>
        </div>
        <div>
          <strong>請求情報</strong>
          <table class= "table table-bordered" id= "total-table">
            <thead>
              <tr>
                <th class="table-secondary" width= "95px">商品合計</th>
                <td>￥<%= @order.total_price - @order.potage %></td>
              </tr>
              <tr>
                <th class="table-secondary">配送料</th>
                <td>￥<%= @order.potage %></td>
              </tr>
              <tr>
                <th class="table-secondary">請求金額</th>
                <td>￥<%= @order.total_price %></td>
              </tr>
            </thead>
          </table>
        </div>
      </div>
      <div>
        <strong>注文内容</strong>
        <table class= "table table-bordered table-sm">
          <thead>
            <tr class="table-secondary">
              <th>商品</th>
              <th width= "100px">単価(税込)</th>
              <th width= "100px">個数</th>
              <th width= "110px">小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_products.each do |order_product| %>
              <tr>
                <td><%= link_to product_path(order_product.product.id) do %>
                  <%= attachment_image_tag order_product.product, :image, size:"50x50", format: 'jpeg', fallback:"no_image.jpg" %>
                  <span class= "ml-2"><%= order_product.product.name %></span>
                <% end %></td>
                <td class="align-middle">￥<%= order_product.subtotal_price / order_product.quantity %></td>
                <td class="align-middle"><%= order_product.quantity %></td>
                <td class="align-middle">￥<%= order_product.subtotal_price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
