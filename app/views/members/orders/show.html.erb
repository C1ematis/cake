<h2>注文履歴詳細</h2>
<div class= "d-flex">
  <div>
    <strong>注文情報</strong>
    <table class= "table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.received_status %></td>
      </tr>
    </table>
  </div>
  <div>
    <strong>請求情報</strong>
    <table class= "table table-bordered">
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_price - @order.potage %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.potage %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <td><%= @order.total_price %></td>
      </tr>
    </table>
  </div>
</div>
<div>
  <strong>注文内容</strong>
  <table class= "table table-bordered">
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <% @order.order_products.each do |order_product| %>
    <tr>
      <td><%= order_product.product.name %></td>
      <td><%= order_product.subtotal_price / order_product.quantity %></td>
      <td><%= order_product.quantity %></td>
      <td><%= order_product.subtotal_price %></td>
    </tr>
    <% end %>
  </table>
</div>
