<h2>注文情報入力</h2>
<strong>支払方法</strong>
<%#= select :payment_method, :name ,Order.payment_methods.keys.to_a %>
<%= form_with url: orders_info_path, method: :post, local: :true do |f| %>
<div>
  <%= f.radio_button :payment_method ,0 ,checked: true %>
  <%= f.label :payment_method,  Order.payment_methods.keys.to_a[0] %>
</div>
<div>
  <%= f.radio_button :payment_method ,1 %>
  <%= f.label :payment_method,  Order.payment_methods.keys.to_a[1] %>
</div>
<strong>お届け先</strong>
<div>
  <%= f.radio_button :destination ,0 ,checked: true %>
  <%= f.label :destination,  "ご自身の住所" %><br>
  〒<%= @member.postal_code %> <%= @member.address %><br><%= @member.last_name %> <%= @member.first_name %>
</div>
<%# if @member.destinations.any? %>
<div>
  <%= f.radio_button :destination ,1 %>
  <%= f.label :destination,  "登録住所から選択" %>
  <%= f.select :destinations, @member.destinations ,prompt: "登録されていません" %>
</div>
<%# end %>
<div>
  <%= f.radio_button :destination ,2 %>
  <%= f.label "新しいお届け先" %>
<div>
<div>
  <%= f.label "郵便番号(ハイフン無し)" %>
  <%= f.text_field :postal_code %>
</div>
<div>
  <%= f.label "住所" %>
  <%= f.text_field :address %>
</div>
<div>
  <%= f.label "宛名" %>
  <%= f.text_field :name %>
</div>
</div>
  <%= f.submit "確認画面へ進む" %>
  <% end %>