<h2>注文確認</h2>
      <table class= "table table-hover table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_products.each do |cart_product| %>
          <tr>
            <td><%= attachment_image_tag cart_product.product, :image_id, size:"40x40", format: 'jpeg', fallback:"no_image.jpg" %><%= cart_product.product.name %></td>
            <!--税込価格は切捨て-->
            <td><%= (cart_product.product.price * $tax_rate).floor %></td>
            <!--数量-->
            <td><%= cart_product.quantity %></td>
            <!--小計の表示:数量ｘ(価格ｘ税率)-->
            <td><%= cart_product.quantity * (cart_product.product.price * $tax_rate).floor %></td>
            <!--@totalに数量ｘ(価格ｘ税率)を代入-->
          </tr><% @total += cart_product.quantity * (cart_product.product.price * $tax_rate).floor %>
          <% end %>
        </tbody>
      </table>
      <table class= "table table-hover table-bordered">
        <thead>
          <tr>
            <th>送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @total + 800 %></td>
          </tr>
        </thead>
      </table>
<div><strong>支払方法 ：<%= Order.payment_methods.keys.to_a[@payment] %></strong></div>
<div><strong>お届け先 ：〒<%= @postal_code %> <%= @address %><br><%= @name %></strong></div>
<%= form_with model: @order, local: :true do |f| %>
<%= f.hidden_field :postal_code , value: @postal_code %>
<%= f.hidden_field :address , value: @address %>
<%= f.hidden_field :name , value: @name %>
<%= f.hidden_field :potage , value: 800 %>
<%= f.hidden_field :total_price , value: @total+800 %>
<%= f.hidden_field :payment_methods , value: @payment %>
<%= f.submit "注文を確定する" ,class:"btn btn-primary" %>

<% end %>
<%= link_to "注文を確定する", orders_thanks_path, method: :get , class:"btn btn-primary" %>