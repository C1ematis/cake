<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
              <%= render "members/members/shared/error_messages", resource: @destination %>
        <h1>配送登録/一覧</h1>
        <%= form_with model: @destination,local: true do |f| %>
        
            <div class="form-group">
              <%= f.label :郵便番号 %>
              <%= f.text_field :postal_code, :placeholder => "0000000" ,class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :住所 %>
              <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0"  ,class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :宛名 %>
              <%= f.text_area :name, :placeholder => "令和道子"  ,class:"form-control" %>
            </div>
        
            <%= f.submit "新規登録", class:"btn btn-success m-2" %>
        <% end %>
        
        <table border="1">
          <thead>
            <tr>
              <th width="100">郵便番号</th>
              <th width="100">住所</th>
              <th width="100">宛名</th>
          </tr>
          </thead>
          <tbody>
          <% @member.destinations.each do |destination| %>
            <tr>
              <td><%= destination.postal_code %></td>
              <td><%= destination.address %></td>
              <td><%= destination.name %></td>
              <td>
                <%= link_to "編集する" , edit_destination_path(destination.id), class:"btn btn-success" %>
                <%= link_to "削除する" ,destination_path(destination.id) ,method: :delete, class:"btn btn-danger" %>
        
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>




