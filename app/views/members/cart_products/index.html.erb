<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <% if @cart_products.any? %>
        <div class="d-flex justify-content-between mt-3">
          <h2>ショッピングカート</h2>
          <div><%= link_to "カートを空にする", destroy_all_members_cart_products_path, method: :delete, class:"btn btn-danger", "data-confirm" => "ショッピングカートの中身を全て消します" %></div>
        </div>
        <% if @cart_product != nil && @cart_product.errors.any? %>
          <%= render "members/members/shared/error_messages", resource: @cart_product %><% end %>
        <table class= "table table-bordered table-sm mt-3">
          <thead>
            <tr>
              <th class="table-secondary">商品名</th>
              <th class="table-secondary" width= "100px">単価(税込)</th>
              <th class="table-secondary" width= "100px">数量</th>
              <th class="table-secondary" width= "110px">小計</th>
              <th class="table-secondary" width= "90px" colspan= "1"></th>
            </tr>
          </thead>
          <tbody>
            <% @total = 0 %>
            <% @cart_products.each do |cart_product| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_product.product, :image, size:"50x50", format: 'jpeg', fallback:"no_image.jpg" %>
                <span class= "ml-2"><%= cart_product.product.name %></span>
              </td>
              <!--税込価格は切捨て-->
              <td class="align-middle">￥<%= (cart_product.product.price * $tax_rate).floor %></td>
              <!--数量の変更-->
              <td class="align-middle">
                <%= form_with model: cart_product, method: :patch, local:true do |f| %>
                <div class= "input-group">
                  <%= f.number_field :quantity , value: cart_product.quantity, class:"form-controls"%>
                  <div class="input-group-append"><%#= f.submit "変更" %></div>
                  <% end %>
                </div>
              </td>
              <!--小計の表示:数量ｘ(価格ｘ税率)-->
              <td class="align-middle">￥<%= cart_product.quantity * (cart_product.product.price * $tax_rate).floor %></td>
              <td class="text-center"><%= link_to "削除する",cart_product_path(cart_product.id), method: :delete, class:"btn btn-danger btn-sm" %></td>
              <!--@totalに数量ｘ(価格ｘ税率)を代入-->
            </tr>
            <% @total += cart_product.quantity * (cart_product.product.price * $tax_rate).floor %>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-between">
          <div><%= link_to "買い物を続ける", products_path, class:"btn btn-primary" %></div>
          <table class= "table table-bordered" id="total-table">
            <thead>
              <th width= "95px" class="table-secondary">合計金額</th>
              <th>￥<%= @total %></th>
            </thead>
          </table>
        </div>
        <div class="text-center"><%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %></div>
      <% else %> 
        <h2 class= "mt-3">カートに商品はありません</h2>
        <div><%= link_to "買い物を続ける", products_path, class:"btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>