

  <div class="login-body">
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>

                <span id="reauth-email" class="reauth-email"></span>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <div class="field">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :パスワード %><br />
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>

              <div class="actions">
                <%= f.submit "ログイン", class:"btn btn-info btn-block login"   %>
              </div>
            <% end %>
            <p> </p>
            <p>会員登録がお済みでない方</p>
            <%= link_to "新規登録", new_member_registration_path, class:"btn btn-info btn-block login" %>
                <div id="remember" class="checkbox">
                </div>
        </div>
    </div>
  </div>

